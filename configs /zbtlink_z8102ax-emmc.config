# ============ 基础目标平台选择 ============
# 核心平台选项，必须启用
CONFIG_TARGET_mediatek=y
CONFIG_TARGET_mediatek_filogic=y
CONFIG_TARGET_mediatek_filogic_DEVICE_zbtlink_z8102ax-emmc=y

# ============ 内核与硬件支持 ============
# 核心CPU与内存支持
CONFIG_HAS_MEDIATEK_DRAM=y
CONFIG_MEDIATEK_MC=y
CONFIG_MT7981_WATCHDOG=y

# 引脚控制器 (Pinctrl)
CONFIG_PINCTRL=y
CONFIG_PINCTRL_MT7981=y

# ============ eMMC/存储支持 (根据你的mmcblk0设备) ============
# 核心MMC驱动 (驱动你的 Y0S128 eMMC)
CONFIG_MMC=y
CONFIG_MMC_BLOCK=y
CONFIG_MMC_MTK=y
CONFIG_MMC_SDHCI_MTK=y

# 内核模块包 (实际编译进固件的驱动)
CONFIG_PACKAGE_kmod-mmc=y
CONFIG_PACKAGE_kmod-mmc-mtk=y
CONFIG_PACKAGE_kmod-mtk-sd=y

# 文件系统支持 (你的p7分区是ext4，可选f2fs)
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-f2fs=y
# 文件系统工具
CONFIG_PACKAGE_e2fsprogs=y
CONFIG_PACKAGE_f2fs-tools=y
CONFIG_PACKAGE_blkid=y
CONFIG_PACKAGE_lsblk=y
# 关键：启用此选项以自动挂载你的105G数据分区
CONFIG_PACKAGE_block-mount=y

# ============ 网络驱动 (MT7981B核心) ============
# 有线以太网 (SoC集成)
CONFIG_PACKAGE_kmod-mtk-eth=y
CONFIG_PACKAGE_kmod-mtk-eth-soc=y
# 无线Wi-Fi (常见配套芯片)
CONFIG_PACKAGE_kmod-mt7915e=y
CONFIG_PACKAGE_kmod-mt7981-firmware=y
# 无线卸载引擎 (提升Wi-Fi性能)
CONFIG_PACKAGE_kmod-mtk-wed=y

# ============ USB支持 ============
# 基础USB驱动
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb3=y
CONFIG_PACKAGE_kmod-usb-xhci-mtk=y
# USB存储 (如需接U盘/硬盘)
CONFIG_PACKAGE_kmod-usb-storage=y

# ============ 4G/LTE支持 (按需启用) ============
# 注意：请确认你的设备是否有USB口接4G模块
CONFIG_PACKAGE_kmod-usb-net-rndis=y
CONFIG_PACKAGE_kmod-usb-net-cdc-mbim=y
CONFIG_PACKAGE_kmod-usb-net-qmi-wwan=y
CONFIG_PACKAGE_kmod-usb-serial-option=y

# ============ 系统与工具 ============
# SSH与诊断
CONFIG_PACKAGE_openssh-client=y
CONFIG_PACKAGE_openssh-server=y
CONFIG_PACKAGE_openssh-sftp-server=y
CONFIG_PACKAGE_iperf3=y
CONFIG_PACKAGE_tcpdump=y
# 编辑器
CONFIG_PACKAGE_nano=y
# CONFIG_PACKAGE_vim=y # 若不需要完整vim，nano更轻量
# 系统监控
CONFIG_PACKAGE_htop=y

# ============ LuCI Web管理界面 ============
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl-openssl=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
# 建议增加的实用LuCI应用：
CONFIG_PACKAGE_luci-app-statistics=y # 流量监控
CONFIG_PACKAGE_luci-app-ttyd=y       # 网页终端
CONFIG_PACKAGE_luci-app-commands=y   # 自定义命令
